# Slot Machine Game Environment Variables

# Development Configuration
VITE_GAME_DEBUG=true
VITE_PERFORMANCE_MONITORING=true
VITE_TEST_MODE=false

# Game Settings
VITE_GAME_WIDTH=550
VITE_GAME_HEIGHT=600
VITE_BACKGROUND_COLOR=0x1a1a1a

# Performance Settings
VITE_MAX_FPS=60
VITE_ENABLE_VSYNC=true
VITE_SPRITE_POOL_SIZE=50

# Asset Configuration
